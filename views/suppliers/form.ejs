<%- include('../partials/header') %>

    <h1>
        <%= supplier && supplier._id ? 'Edit Supplier' : 'New Supplier' %>
    </h1>

    <form method="post" action="<%= supplier && supplier._id ? '/suppliers/' + supplier._id + '?_method=PUT' : '/suppliers' %>">
        <div>
            <label>Name</label>
            <input type="text" name="name" value="<%= supplier.name || '' %>" required>
        </div>

        <div>
            <label>Phone</label>
            <input type="text" name="phone" value="<%= supplier.phone || '' %>">
        </div>

        <div>
            <label>Address</label>
            <input type="text" name="address" value="<%= supplier.address || '' %>">
        </div>

        <button class="btn btn-primary"><%= supplier && supplier._id ? 'Update' : 'Create' %></button>
        <a href="/suppliers" class="btn btn-danger">Cancel</a>
    </form>

    <%- include('../partials/footer') %>