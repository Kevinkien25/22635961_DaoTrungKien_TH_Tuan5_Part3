<%- include('../partials/header') %>

    <h1>Suppliers</h1>

    <div style="margin-bottom:10px;">
        <a href="/suppliers/new" class="btn btn-primary">+ Add Supplier</a>
    </div>

    <table class="list-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (suppliers && suppliers.length) { %>
                <% suppliers.forEach(s => { %>
                    <tr>
                        <td>
                            <%= s.name %>
                        </td>
                        <td>
                            <%= s.phone %>
                        </td>
                        <td>
                            <%= s.address %>
                        </td>
                        <td>
                            <a href="/suppliers/<%= s._id %>/edit" class="btn btn-warning">Edit</a>
                            <form method="post" action="/suppliers/<%= s._id %>?_method=DELETE" style="display:inline">
                                <button class="btn btn-danger" onclick="return confirm('Delete supplier?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4">No suppliers found.</td>
                            </tr>
                            <% } %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>