<%- include('../partials/header') %>

    <h1>
        <%= product && product._id ? 'Edit Product' : 'New Product' %>
    </h1>

    <form method="post" action="<%= product._id ? '/products/' + product._id + '?_method=PUT' : '/products' %>">
        <div>
            <label>Name</label>
            <input name="name" value="<%= product.name || '' %>" placeholder="Product name" required>
        </div>

        <div>
            <label>Price</label>
            <input name="price" value="<%= product.price || 0 %>" type="number" step="0.01">
        </div>

        <div>
            <label>Quantity</label>
            <input name="quantity" type="number" min="0" value="<%= product.quantity != null ? product.quantity : 0 %>">
        </div>

        <div>
            <label>Supplier</label>
            <select name="supplier">
      <option value="">-- Select supplier --</option>
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" <%= product.supplier == s._id ? 'selected' : '' %>><%= s.name %></option>
      <% }) %>
    </select>
        </div>

        <button class="btn btn-primary">Save</button>
    </form>

    <%- include('../partials/footer') %>